@Tutorial(time: 12) {
    @Intro(title: "OptionalAPI Async") {
        Use async helpers to keep optional flows consistent in async contexts.
    }

    @Section(title: "Async transforms") {
        @Steps {
            @Step {
                Use `asyncAndThen` to transform optionals asynchronously.

                @Code(file: "AsyncAndThen.swift", name: "asyncAndThen") {
                    ```swift
                    let value: Int? = 41

                    let result = await value
                        .asyncAndThen { wrapped in
                            await Task.yield()
                            return wrapped + 1
                        }
                    ```
                }
            }
        }
    }

    @Section(title: "Async filters") {
        @Steps {
            @Step {
                Use `asyncFilter` to keep async predicates in the chain.

                @Code(file: "AsyncFilter.swift", name: "asyncFilter") {
                    ```swift
                    let value: Int? = 42

                    let result = await value.asyncFilter { wrapped in
                        await Task.yield()
                        return wrapped > 40
                    }
                    ```
                }
            }
        }
    }

    @Section(title: "Throwing async helpers") {
        @Steps {
            @Step {
                Use `tryAsyncWhenSome` for async side effects that can throw.

                @Code(file: "TryAsyncWhenSome.swift", name: "tryAsyncWhenSome") {
                    ```swift
                    let value: Int? = 42

                    try await value.tryAsyncWhenSome { wrapped in
                        await Task.yield()
                        print(wrapped)
                    }
                    ```
                }
            }
        }
    }
}
