@Tutorial(time: 6) {
    @Intro(title: "OptionalAPI Codable") {
        Decode optional responses and persist cache-friendly models.
    }

    @Section(title: "Decode optional data") {
        @Steps {
            @Step {
                Decode optional response data into a typed config.
                @Code(file: "Decode.swift", name: "decode") {
                    ```swift
                    struct Payload: Codable, Equatable {
                        let value: Int
                        let label: String
                    }

                    let data: Data? = """{"value":1,"label":"one"}""".data(using: .utf8)
                    let decoded: Payload? = data.decode()
                    ```
                }
            }
        }
    }

    @Section(title: "Encode optional values") {
        @Steps {
            @Step {
                Encode configs for caching between launches.
                @Code(file: "Encode.swift", name: "encode") {
                    ```swift
                    let payload: Payload? = .init(value: 1, label: "one")
                    let data = payload.encode()
                    ```
                }
            }
        }
    }
}
